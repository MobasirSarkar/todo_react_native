{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "module": "NodeNext",
        "outDir": "dir",
        "rootDir": "src",
        "declaration": true,
        "composite": true,
        "sourceMap": true,
        "declarationMap": true,
        "strict": true
    },
    "include": [
        "src"
    ]
}
